<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PICK CONTACT"
        android:id="@+id/buttonPickContact"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Default01"
        android:id="@+id/phoneNoTV"
        android:layout_above="@+id/buttonPickContact"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/messageInputField"
        android:layout_toStartOf="@+id/messageInputField" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mImageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/messageInputField" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAKE PIC"
        android:id="@+id/buttonTakePic"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonPickContact"
        android:layout_toEndOf="@+id/buttonPickContact" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/messageInputField"
        android:layout_alignBottom="@+id/phoneNoTV"
        android:layout_toRightOf="@+id/buttonPickContact"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="textAutoCorrect"
        android:imeOptions="actionDone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MMS"
        android:id="@+id/buttonSendMMS"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/buttonTakePic"
        android:layout_toEndOf="@+id/buttonTakePic" />

</RelativeLayout>
